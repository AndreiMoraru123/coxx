{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Bazel Build",
      "type": "shell",
      "command": "bazel",
      "args": [
        "build",
        "//...",
        "--action_env=CC=/usr/sbin/gcc",
        "--action_env=CXX=/usr/sbin/g++"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Bazel Build and Run",
      "type": "shell",
      "command": "bazel",
      "args": [
        "run",
        "//:hello_world",
        "--action_env=CC=/usr/sbin/gcc",
        "--action_env=CXX=/usr/sbin/g++"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
